<!doctype html>
<html>
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
	<meta http-equiv="X-UA-Compatible" content="ie=edge">
	<title>{block #title}Report Project{/}</title>

	<!-- Styles -->
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.min.css"/>
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.5/css/select2.min.js"/>

	{* Assets fot tlapnet/chart *}
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/c3/0.6.8/c3.min.css">
	<script src="https://cdnjs.cloudflare.com/ajax/libs/c3/0.6.8/c3.js"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/d3/5.7.0/d3.min.js"></script>

	<!-- Theme -->
	<link rel="stylesheet" href="{$basePath}/assets/css/theme.css"/>
</head>
<body>
<div class="p-3 px-md-4 mb-4 bg-white">
	<div class="d-flex flex-column flex-md-row align-items-center container">
		<strong>Report Project</strong>
	</div>
</div>

<main role="main" class="container mb-3">
	<!-- Main: alerts -->
	<section class="alerts" n:inner-foreach="$flashes as $flash">
		<div class="alert alert-{$flash->type}" role="alert">
			{$flash->message}
		</div>
	</section>
	<!-- /Main: alerts -->

	<!-- Main: content -->
	<section class="content box-shadow">
		<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
			<a class="navbar-brand" href="#">Examples</a>
			<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExample09" aria-controls="navbarsExample09" aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>

			<div class="collapse navbar-collapse">
				<ul class="navbar-nav mr-auto">

					<li class="nav-item dropdown" n:foreach="$groups as $group">


						<a class="nav-link dropdown-toggle" id="dropdown-{$group->getGid()}" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" title="{='Total reports: ' . count($group->getReports())}" href="#">{$group->getName()}</a>

						<div class="dropdown-menu" aria-labelledby="dropdown-{$group->getGid()}" n:inner-foreach="$group->getReports() as $report1">
							<a class="dropdown-item" n:href="Report:detail, $report1->getRid()" >
								{$report1->getOption('menu')}
							</a>
						</div>


					</li>

					<li class="nav-item dropdown">

						<a class="nav-link dropdown-toggle" id="dropdown-groupless" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" title="{='Total reports: ' . count($groupless)}" href="#">GroupLess</a>

						<div class="dropdown-menu" aria-labelledby="dropdown-groupless">
							<a class="dropdown-item" n:href="Report:detail, $report2->getRid()" n:foreach="$groupless as $report2">
								{$report2->getOption('menu')}
							</a>
						</div>
					</li>

				</ul>
			</div>
		</nav>
		{include #content}
	</section>
	<!-- /Main: content -->
</main>

<footer class="footer">
	<div class="container">
		<span class="text-muted">
			&copy; {=date(Y)} Tlapnet - created on <a class="text-dark" href="https://github.com/tlapnet/snow-project">Snow platform</a>
		</span>
	</div>
</footer>

<!-- Scripts -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/js/bootstrap.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.5/js/select2.min.js"></script>

</body>
</html>
